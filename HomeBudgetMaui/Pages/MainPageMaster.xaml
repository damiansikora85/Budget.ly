<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HomeBudgetStandard.Pages.MainPageMaster"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeBudgetStandard.Pages"
    xmlns:utils="clr-namespace:HomeBudgetStandard.Utils"
    Title="Master">
    <ContentPage.Resources>
        <DataTemplate x:Key="NormalTemplate">
            <ViewCell>
                <StackLayout
                    Padding="15,10"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <Label
                        Text="{Binding Icon}"
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Center">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="Android" Value="Font Awesome 5 Brands-Regular-400.otf#Font Awesome 5 Brands Regular" />
                            </OnPlatform>
                        </Label.FontFamily>
                    </Label>
                    <Label
                        Text="{Binding Title}"
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </ViewCell>
        </DataTemplate>

        <DataTemplate x:Key="DropboxTemplate">
            <ViewCell>
                <StackLayout
                    Padding="15,10"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <Label
                        Text="{Binding Icon}"
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Center">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="Android" Value="Font Awesome 5 Brands-Regular-400.otf#Font Awesome 5 Brands Regular" />
                            </OnPlatform>
                        </Label.FontFamily>
                    </Label>
                    <Label
                        Text="{Binding Title}"
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </ViewCell>
        </DataTemplate>

        <local:CellTemplateSelector
            x:Key="templateSelector"
            BrandsTemplate="{StaticResource DropboxTemplate}"
            NormalTemplate="{StaticResource NormalTemplate}" />
    </ContentPage.Resources>

    <StackLayout>
        <ListView
            x:Name="MenuItemsListView"
            HasUnevenRows="true"
            ItemTemplate="{StaticResource templateSelector}"
            ItemsSource="{Binding MenuItems}"
            SeparatorVisibility="Default">
            <ListView.Header>
                <StackLayout Margin="5,14" Orientation="Horizontal">
                    <Image HeightRequest="50" Source="{utils:ImageResourceExtension HomeBudgetStandard.Assets.Logo.png}" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="Budget.ly"
                        TextColor="#00A9FF"
                        VerticalTextAlignment="End" />
                </StackLayout>
            </ListView.Header>
        </ListView>
    </StackLayout>
</ContentPage>