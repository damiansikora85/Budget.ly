<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="HomeBudgetStandard.Views.BudgetPlanView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:utils="clr-namespace:HomeBudget.Utils"
    Title="Planowanie">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="ContentTemplate">
                <Grid x:Name="mainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <StackLayout
                        Margin="12,0"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal">
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding PrevMonthCommand}"
                            HorizontalOptions="Start"
                            Text="&#xf104;"
                            WidthRequest="60">
                            <Button.FontFamily>
                                <OnPlatform x:TypeArguments="x:String">
                                    <On Platform="Android" Value="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid" />
                                </OnPlatform>
                            </Button.FontFamily>
                        </Button>
                        <Label
                            FontSize="Large"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="NoWrap"
                            Text="{Binding Date}"
                            VerticalTextAlignment="Center" />
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding NextMonthCommand}"
                            HorizontalOptions="End"
                            Text="&#xf105;"
                            WidthRequest="60">
                            <Button.FontFamily>
                                <OnPlatform x:TypeArguments="x:String">
                                    <On Platform="Android" Value="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid" />
                                </OnPlatform>
                            </Button.FontFamily>
                        </Button>
                    </StackLayout>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                FontAttributes="Bold"
                                LineBreakMode="NoWrap"
                                Rotation="270"
                                Text="Wydatki"
                                TextDecorations="{Binding ExpensesChartTextDecorations}"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ExpensesChartCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                Grid.Row="1"
                                FontAttributes="Bold"
                                LineBreakMode="NoWrap"
                                Rotation="270"
                                Text="Dochody"
                                TextDecorations="{Binding IncomesChartTextDecorations}"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IncomesChartCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <utils:BudgetChart
                            Grid.Column="1"
                            Data="{Binding ExpensesChartData}"
                            IsVisible="{Binding ExpensesVisible}"
                            LegendPosition="RightSide" />
                        <utils:BudgetChart
                            Grid.Column="1"
                            Data="{Binding IncomesChartData}"
                            IsVisible="{Binding IncomesVisible}"
                            LegendPosition="RightSide" />
                    </Grid>

                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>