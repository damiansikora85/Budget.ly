<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeBudgeStandard.Pages.DropboxPage">
    <ContentPage.Content>
        <StackLayout Margin="25,25">
            <Label Text="Synchronizacja danych z Dropbox" FontSize="Large" FontAttributes="Bold"/>
            
            <Image Source="dropboxInfo.png" HeightRequest="150" Margin="0,20"/>
            <Label Text="Dzięki synchronizacji możesz współdzielić budżet na kilku urządzeniach"/>
            <Grid x:Name="iapLayout" IsVisible="false">
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>

                <Button Clicked="OnLoginDropbox" Style="{StaticResource ButtonStyle}"/>
                <Label InputTransparent="True" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Kup synchronizacje   " FontAttributes="Bold"/>
                            <Span Text="{Binding RegularPrice, Mode=OneWay}" TextDecorations="Strikethrough"/>
                            <Span Text="{Binding PromoPrice, Mode=OneWay}" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Button Grid.Row="1" Text="Wykupione wcześniej" Style="{StaticResource ButtonStyle}" Clicked="OnLoginDropboxWithDataCheck"  />
            </Grid>
            <StackLayout x:Name="connectLayout" IsVisible="false">
                <Button Text="Synchronizuj z Dropbox" Style="{StaticResource ButtonStyle}" Clicked="OnLoginDropbox" Margin="0,15"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Synchronizacja włączona" VerticalTextAlignment="Center" LineBreakMode="NoWrap"/>
                    <Label Text="{Binding SynchronizationStatus}" FontSize="35" LineBreakMode="NoWrap">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String" Android="Font Awesome 5 Free-Regular-400.otf#Font Awesome 5 Free Regular" />
                        </Label.FontFamily>
                    </Label>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>