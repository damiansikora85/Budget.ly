<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:HomeBudgeStandard.Views"
            xmlns:utils="clr-namespace:HomeBudget.Utils"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.IsSwipePagingEnabled="False"
            x:Class="HomeBudgeStandard.Pages.MainTabbedPage">
    <TabbedPage.Behaviors>
        <utils:ActivePageTabbedPageBehavior />
    </TabbedPage.Behaviors>
    <TabbedPage.BarBackground>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,0">
            <GradientStop Color="#00A9FF"
                          Offset="0.1"/>
            <GradientStop Color="#00D7C4"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </TabbedPage.BarBackground>

    <views:SummaryView/>
    <views:BudgetRealView/>
    <views:BudgetPlanView/>
    <!--<views:TestPage Title="Test"/>-->

</TabbedPage>